<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A2947"
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/Appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/appbar_shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/linear"
            >
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </com.google.android.material.appbar.AppBarLayout>
        <View
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            app:layout_constraintTop_toBottomOf="@id/Appbar"
            />

        <ImageButton
            android:id="@+id/BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:importantForAccessibility="no"
            android:visibility="gone"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:src="@drawable/arrow"
            />

        <ImageButton
            android:id="@+id/LocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:importantForAccessibility="no"
            android:src="@drawable/more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/TextFragment"
            app:layout_constraintBottom_toBottomOf="@id/TextFragment"
            android:layout_marginEnd="20dp"
            />

        <TextView
            android:id="@+id/TextFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/BackButton"
            android:text="dsadsadsadsadsd"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"

            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/ProfileImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/linear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/imageprofile_corners"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/NameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ProfileImage"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="28.8sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="Laokont Ratkoceri"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <ImageView
            android:id="@+id/CountryImage"
            app:layout_constraintTop_toTopOf="@id/CountryText"
            android:background="@drawable/map_icon"
            app:layout_constraintBottom_toBottomOf="@id/CountryText"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/CountryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/CountryText"
            android:layout_marginTop="20dp"

            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/NameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:text="sadsadsasadsa"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/NumberPost"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/CountryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/NumberFolowers"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/NumberPost"
            app:layout_constraintTop_toTopOf="@id/NumberPost"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginEnd="70dp"
            android:layout_height="wrap_content"

            />


        <TextView
            android:id="@+id/NumberFolowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/NumberPost"
            app:layout_constraintTop_toTopOf="@id/NumberPost"
            android:layout_marginStart="70dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="24sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/NumberPost"
            app:layout_constraintTop_toBottomOf="@id/NumberPost"
            app:layout_constraintEnd_toEndOf="@id/NumberPost"
            android:text="Posts"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/NumberFolowers"
            app:layout_constraintTop_toBottomOf="@id/NumberFolowers"
            app:layout_constraintEnd_toEndOf="@id/NumberFolowers"
            android:text="Followers"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/NumberFolowing"
            app:layout_constraintTop_toBottomOf="@id/NumberFolowing"
            app:layout_constraintEnd_toEndOf="@id/NumberFolowing"
            android:text="Following"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/NumberFolowing"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/darker_gray"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/PostImages"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/NumberFolowing"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
